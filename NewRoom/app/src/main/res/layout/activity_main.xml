<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="info.smartlife360.newroom.MainActivity">

    <WebView
        android:id="@+id/browser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"/>

    <ListView
        android:id="@+id/newsList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp"/>

    <GridLayout
        android:id="@+id/iconGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:columnCount="2"
        android:fitsSystemWindows="false"
        android:rowCount="2"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="3"
            android:layout_gravity="fill"
            android:layout_row="0"
            android:layout_rowWeight="3"
            android:onClick="channelClicked"
            android:scaleType="fitXY"
            android:tag="0"
            app:srcCompat="@drawable/bbc"/>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_gravity="top|fill"
            android:layout_row="0"
            android:layout_rowWeight="3"
            android:onClick="channelClicked"
            android:scaleType="fitXY"
            android:tag="1"
            app:srcCompat="@drawable/bi"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnWeight="3"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="3"
            android:onClick="channelClicked"
            android:scaleType="fitXY"
            android:tag="2"
            app:srcCompat="@drawable/hindu"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_columnWeight="3"
            android:layout_gravity="fill"
            android:layout_row="1"
            android:layout_rowWeight="3"
            android:onClick="channelClicked"
            android:scaleType="fitXY"
            android:tag="3"
            app:srcCompat="@drawable/hackernews"/>

    </GridLayout>
</android.support.constraint.ConstraintLayout>
